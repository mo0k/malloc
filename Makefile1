ifeq ($(HOSTTYPE),)
	HOSTTYPE := $(shell uname -m)_$(shell uname -s)
endif

NAME = libft_malloc_$(HOSTTYPE).so

CFLAGS = -Wall -Werror -Wextra -g
CC = gcc $(CFLAGS)

LIBFT_PATH = libft
LIB = $(LIBFT_PATH)/libft.a

INC_PATH = includes

INCS = $(INC_PATH)/include1.h \
		$(INC_PATH)/include2.h 

SRCS_PATH = sources

SRCS = $(SRCS_PATH)/filesource1.c 					\
		$(SRCS_PATH)/filesource2.c

OBJS	= $(SRCS:%.c=%.o)
C_LGREEN = "\033[92m"
C_LRED = "\033[91m"
C_RED = "\033[31m"
C_DFL	="\033[0m"

ECHO = echo -n

all: $(NAME)

$(NAME): $(LIB) $(INCS) $(OBJS_PATH) $(OBJS) Makefile
	@$(CC) $(CFLAGS) -shared $(OBJS) -o $(NAME) -L $(LIBFT_PATH) -lftprintf
	@/bin/rm -f libft_malloc.so
	@ln -s $(NAME) libft_malloc.so
	@echo $(C_LGREEN)"$(NAME) compiled"$(C_DFL)

$(LIB):
	@make -C $(LIBFT_PATH)

%.o: %.c
	@$(CC) -I $(INC_PATH) -I $(LIBFT_PATH)/includes -c -o $@ $<
	@echo "Linking file" $@

clean:
	@make clean -C $(LIBFT_PATH)
	@/bin/rm -f $(OBJS)

fclean: clean
	@make fclean -C $(LIBFT_PATH)
	@if [ -e $(NAME) ]; \
	then echo $(C_RED)"Delete $(NAME)."$(C_DFL); \
	fi;
	@/bin/rm -f $(NAME)

re: fclean all

.PHONY: objects OBJS clean fclean